extends layout
block content
  -let destnations4 = `dispatch(\"/grapes/create\")`
 
  button.btn( class="btn-primary m-1", onclick= destinations4) Create 
  
  h1= title
  
  div(class="container-fluid")
        div(class="row m-1")
            -
                let grapes = results
            each m, index in grapes 
                
                -let destination1 = `dispatch(\"/grapes/update?id=${m._id}\")`
                -let destinations2 = `dispatch(\"/grapes/detail?id=${m._id}\")`
                -let destinations3 = `dispatch(\"/grapes/delete?id=${m._id}\")`
                div(class="col-sm-2" onclick=`buy(${index})`) #{m.grapes_type} #{m.Weight} #{m.Cost}
                 button.btn( class="btn-success m-1", onclick= destinations2) Detail
                 button.btn( class="btn-primary m-1", onclick= destination1) Update
                 button.btn( class="btn-danger m-1", onclick= destinations3) Delete
            script.
                function buy(itemNo){
                    alert(`You purchased Item ${itemNo+1}`)
                } 
                function dispatch(path){
                    window.location.href=path
                }